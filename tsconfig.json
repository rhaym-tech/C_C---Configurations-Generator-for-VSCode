{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "outDir": "./out",
      "rootDir": "./src",
      "declaration": true
    },
    "include": [
      "*.ts", 
      "src/extension.ts",
    ],
    "exclude": [
      "node_modules",
      "out"
    ]
  }
  